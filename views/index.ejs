<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.5, user-scalable=yes">
    <title>
        <%= title %>
    </title>

    <!-- Google Font & Font Awesome -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <!-- Overlay untuk menu mobile -->
    <div class="overlay" id="overlay"></div>

    <div class="container">
        <!-- Navbar dengan Burger Menu -->
        <div class="navbar">
            <div class="logo-area">
                <div class="logo-icon">L</div>
                <span class="binance-logo">Landing</span>
                <span class="swap-badge">SWAP</span>
            </div>

            <!-- DESKTOP NAVIGATION -->
            <div class="nav-links">
                <a href="#">Exchange</a>
                <a href="#">Markets</a>
                <a href="#">Earn</a>
                <a href="#">Wallet</a>
                <a href="#">More</a>
            </div>
            <div class="nav-right" id="guestNav">
                <button class="btn-outline" id="loginBtn"><i class="fas fa-user"></i> Log In</button>
                <button class="btn-yellow" id="signupBtn">Sign Up</button>
            </div>
            <div class="nav-right active-user" id="userNav" style="display: none;">
                <div class="user-info">
                    <div class="user-avatar">U</div>
                    <span class="user-name">User Demo</span>
                </div>
                <button class="btn-logout" id="logoutBtn"><i class="fas fa-sign-out-alt"></i></button>
            </div>

            <!-- BURGER WRAPPER (mobile only) -->
            <div class="burger-wrapper">
                <div class="burger-icon" id="burgerIcon">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>

        <!-- MOBILE MENU (sidebar) -->
        <div class="mobile-menu" id="mobileMenu">
            <a href="#"><i class="fas fa-exchange-alt"></i> Exchange</a>
            <a href="#"><i class="fas fa-chart-line"></i> Markets</a>
            <a href="#"><i class="fas fa-coins"></i> Earn</a>
            <a href="#"><i class="fas fa-wallet"></i> Wallet</a>
            <a href="#"><i class="fas fa-ellipsis-h"></i> More</a>

            <div class="mobile-menu-buttons">
                <button class="btn-outline" id="mobileLoginBtn"><i class="fas fa-user"></i> Log In</button>
                <button class="btn-yellow" id="mobileSignupBtn">Sign Up</button>
            </div>
            <div class="mobile-language">
                <i class="fas fa-globe"></i> English (US)
            </div>
        </div>

        <!-- WEALTH DASHBOARD (Balance Bar) -->
        <div class="dashboard-bar" id="wealthDashboard" style="display: none;">
            <div class="balance-item">
                <span class="bal-label">Total Balance</span>
                <span class="bal-value" id="totalValue">$0.00</span>
            </div>
            <div class="balance-list" id="balanceScroll">
                <!-- Balance items injected by JS -->
            </div>
        </div>

        <!-- HERO SECTION + SWAP FORM -->
        <div class="hero">
            <div class="hero-left">
                <h1>Swap crypto.<br>Zero hassle. Zero extra fees.</h1>
                <p>Trade any token instantly with Binance Swap. Best rates and deep liquidity, powered by Binance.</p>
                <div class="stats">
                    <div class="stat-item">
                        <h3>$12.8B</h3>
                        <span>24h volume</span>
                    </div>
                    <div class="stat-item">
                        <h3>0.05%</h3>
                        <span>maker fee</span>
                    </div>
                </div>

                <!-- TRADING VIEW CHART -->
                <div class="chart-container">
                    <div id="tradingview_widget"></div>
                </div>
            </div>

            <!-- SWAP CARD -->
            <div class="swap-card">
                <div class="swap-header">
                    <h2><i class="fas fa-repeat"></i> Swap</h2>
                    <i class="fas fa-sliders-h gear-icon"></i>
                </div>

                <!-- FROM -->
                <div class="input-group">
                    <div class="label-row">
                        <span>From</span>
                        <span>Balance: 0.5234 BTC</span>
                    </div>
                    <div class="field-row">
                        <input type="number" placeholder="0.0" value="0.05" id="fromAmount" step="any">
                        <div class="token-selector" id="fromTokenSelector">
                            <span class="token-icon btc-icon">₿</span>
                            <span id="fromTokenText">BTC</span>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                </div>

                <!-- Swap divider -->
                <div class="swap-divider">
                    <div class="swap-icon-circle" id="swapIcon">
                        <i class="fas fa-arrow-down"></i>
                    </div>
                </div>

                <!-- TO -->
                <div class="input-group">
                    <div class="label-row">
                        <span>To</span>
                        <span>Balance: 12.45 ETH</span>
                    </div>
                    <div class="field-row">
                        <input type="number" placeholder="0.0" value="1.432" id="toAmount" step="any" readonly>
                        <div class="token-selector" id="toTokenSelector">
                            <span class="token-icon eth-icon">Ξ</span>
                            <span id="toTokenText">ETH</span>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                </div>

                <!-- Rate info -->
                <div class="exchange-rate">
                    <span><i class="fas fa-chart-line"></i> Rate</span>
                    <span class="rate-value" id="rateValue">1 BTC ≈ <%= rate %> ETH</span>
                </div>

                <!-- SWAP BUTTON -->
                <button class="btn-swap" id="swapNowBtn">
                    <i class="fas fa-arrows-rotate"></i> Swap Now
                </button>
                <div class="disclaimer">
                    *Slippage 0.5% · No additional fees
                </div>
            </div>
        </div>

        <!-- Market highlights -->
        <div class="market-highlights">
            <div class="coin-item">
                <div class="coin-icon bnb-bg">B</div>
                <div class="coin-info">
                    <span class="coin-symbol">BNB</span>
                    <span class="coin-name">Binance Coin</span>
                </div>
                <div class="coin-price">$587.2</div>
                <div class="positive">+2.34%</div>
            </div>
            <div class="coin-item">
                <div class="coin-icon eth-bg">Ξ</div>
                <div class="coin-info">
                    <span class="coin-symbol">ETH</span>
                    <span class="coin-name">Ethereum</span>
                </div>
                <div class="coin-price">$3,210</div>
                <div class="positive">+1.12%</div>
            </div>
            <div class="coin-item">
                <div class="coin-icon btc-bg">₿</div>
                <div class="coin-info">
                    <span class="coin-symbol">BTC</span>
                    <span class="coin-name">Bitcoin</span>
                </div>
                <div class="coin-price">$62,180</div>
                <div class="positive">+0.87%</div>
            </div>
        </div>

        <!-- Feature cards -->
        <div class="features">
            <div class="feature-item">
                <i class="fas fa-bolt"></i>
                <h4>Lightning fast</h4>
                <p>Executes in seconds with Binance's high-performance matching engine.</p>
            </div>
            <div class="feature-item">
                <i class="fas fa-shield-alt"></i>
                <h4>Secure & insured</h4>
                <p>Industry-leading security, SAFU fund, and 24/7 protection.</p>
            </div>
            <div class="feature-item">
                <i class="fas fa-chart-simple"></i>
                <h4>Best price discovery</h4>
                <p>Aggregated from 50+ liquidity sources to minimize slippage.</p>
            </div>
            <div class="feature-item">
                <i class="fas fa-wallet"></i>
                <h4>Non-custodial option</h4>
                <p>Connect your wallet or use Binance account – full control.</p>
            </div>
        </div>

        <!-- Footer -->
        <footer>
            <span>© 2025 Landing Swap. All rights reserved. | Theme demo</span>
            <span class="social-icons">
                <i class="fab fa-twitter"></i>
                <i class="fab fa-telegram"></i>
                <i class="fab fa-discord"></i>
                <i class="fab fa-github"></i>
            </span>
        </footer>
    </div>

    <!-- LOGIN MODAL -->
    <div class="auth-modal-overlay" id="loginModal">
        <div class="auth-modal">
            <button class="close-auth" id="closeLoginModal">&times;</button>
            <div class="auth-header">
                <h2>Welcome Back</h2>
                <p>Log in to your Landing Swap account</p>
            </div>
            <form class="auth-form" onsubmit="return false;">
                <div class="form-group">
                    <label>Email / Phone Number</label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope"></i>
                        <input type="text" class="auth-input" placeholder="Enter your email or phone">
                    </div>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" class="auth-input" placeholder="Enter your password">
                    </div>
                </div>
                <button class="btn-auth-submit">Log In</button>
                <div class="auth-footer">
                    Don't have an account? <a href="#" id="toSignup">Sign Up</a>
                </div>
            </form>
        </div>
    </div>

    <!-- SIGNUP MODAL -->
    <div class="auth-modal-overlay" id="signupModal">
        <div class="auth-modal">
            <button class="close-auth" id="closeSignupModal">&times;</button>
            <div class="auth-header">
                <h2>Create Account</h2>
                <p>Start your crypto journey today</p>
            </div>
            <form class="auth-form" onsubmit="return false;">
                <div class="form-group">
                    <label>Email Address</label>
                    <div class="input-wrapper">
                        <i class="fas fa-at"></i>
                        <input type="email" class="auth-input" placeholder="Enter your email">
                    </div>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" class="auth-input" placeholder="Enter a strong password">
                    </div>
                </div>
                <div class="form-group">
                    <label>Referral ID (Optional)</label>
                    <div class="input-wrapper">
                        <i class="fas fa-users"></i>
                        <input type="text" class="auth-input" placeholder="Enter referral ID">
                    </div>
                </div>
                <button class="btn-auth-submit">Create Account</button>
                <div class="auth-footer">
                    Already have an account? <a href="#" id="toLogin">Log In</a>
                </div>
            </form>
        </div>
    </div>

    <!-- TOKEN SELECTION MODAL -->
    <div class="token-modal-overlay" id="tokenModal">
        <div class="token-modal">
            <div class="token-modal-header">
                <h3>Select a token</h3>
                <button class="close-modal" id="closeTokenModal">&times;</button>
            </div>

            <div class="token-search-container">
                <div class="search-wrapper">
                    <i class="fas fa-search"></i>
                    <input type="text" class="token-search-input" placeholder="Search name or paste address"
                        id="tokenSearchInput">
                </div>
            </div>

            <div class="token-list" id="tokenList">
                <!-- Tokens will be rendered here by JS -->
            </div>
        </div>
    </div>

    <!-- SUCCESS MODAL -->
    <div class="auth-modal-overlay" id="successModal">
        <div class="auth-modal success-modal" style="text-align: center;">
            <button class="close-auth" id="closeSuccessModal">&times;</button>
            <div class="success-icon" style="font-size: 60px; color: #0ecb81; margin-bottom: 20px;">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="auth-header">
                <h2>Swap Successful!</h2>
                <p id="successMessage" style="color: #848e9c;">You have successfully swapped tokens.</p>
            </div>
            <div class="receipt-card"
                style="background: #0b0e11; padding: 20px; border-radius: 16px; margin-top: 20px; text-align: left;">
                <div class="receipt-row" style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                    <span style="color: #848e9c;">Sent</span>
                    <span id="receiptSent" style="font-weight: 600; color: white;">0 BTC</span>
                </div>
                <div class="receipt-row" style="display: flex; justify-content: space-between;">
                    <span style="color: #848e9c;">Received</span>
                    <span id="receiptReceived" style="font-weight: 600; color: #fcd535;">0 ETH</span>
                </div>
            </div>
            <button class="btn-yellow" id="closeSuccessBtn"
                style="width: 100%; margin-top: 24px; padding: 14px; border-radius: 12px; font-weight: 700; cursor: pointer;">Great!</button>
        </div>
    </div>

    <!-- TradingView Script -->
    <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
    <!-- Custom JS -->
    <script src="/script.js"></script>
</body>

</html>